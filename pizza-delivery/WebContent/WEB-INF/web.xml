<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
	id="WebApp_ID" version="4.0">
	<display-name>pizza-delivery</display-name>

	<welcome-file-list>
        <welcome-file>jsp/login/login.jsp</welcome-file>
    </welcome-file-list>

    <servlet>
        <display-name>LoginController</display-name>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>college.custom.controller.LoginController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <display-name>RegistrationController</display-name>
        <servlet-name>RegistrationController</servlet-name>
        <servlet-class>college.custom.controller.RegistrationController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>RegistrationController</servlet-name>
        <url-pattern>/registration</url-pattern>
    </servlet-mapping>

    <servlet>
        <display-name>ManagerController</display-name>
        <servlet-name>ManagerController</servlet-name>
        <servlet-class>college.custom.controller.ManagerController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ManagerController</servlet-name>
        <url-pattern>/logoff</url-pattern>
        <url-pattern>/manage</url-pattern>
        <url-pattern>/viewAssignPizza</url-pattern>
        <url-pattern>/viewAssignDecoration</url-pattern>
        <url-pattern>/addEmployee</url-pattern>
        <url-pattern>/addPizza</url-pattern>
        <url-pattern>/viewPizza</url-pattern>
        <url-pattern>/modifyPizza</url-pattern>
        <url-pattern>/updatePizza</url-pattern>
        <url-pattern>/addDecoration</url-pattern>
        <url-pattern>/viewDecoration</url-pattern>
        <url-pattern>/modifyDecoration</url-pattern>
        <url-pattern>/updateDecoration</url-pattern>
    </servlet-mapping>

    <servlet>
        <display-name>EmployeeController</display-name>
        <servlet-name>EmployeeController</servlet-name>
        <servlet-class>college.custom.controller.EmployeeController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>EmployeeController</servlet-name>
        <url-pattern>/employee</url-pattern>
        <url-pattern>/modifyEmployee</url-pattern>
        <url-pattern>/updateEmployee</url-pattern>
        <url-pattern>/cancelEmployee</url-pattern>
        <url-pattern>/viewEmpPizzaOrder</url-pattern>
        <url-pattern>/viewEmpDecorationOrder</url-pattern>
        <url-pattern>/viewEmpDonePizzaOrder</url-pattern>
        <url-pattern>/viewEmpDoneDecorationOrder</url-pattern>
    </servlet-mapping>

    <servlet>
        <display-name>PizzaController</display-name>
        <servlet-name>PizzaController</servlet-name>
        <servlet-class>college.custom.controller.PizzaController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>PizzaController</servlet-name>
        <url-pattern>/pizza</url-pattern>
        <url-pattern>/decoration</url-pattern>
        <url-pattern>/modifyPizzaManager</url-pattern>
        <url-pattern>/modifyDecorationManager</url-pattern>
        <url-pattern>/updatePizzaOrder</url-pattern>
        <url-pattern>/updateDecorationOrder</url-pattern>
        <url-pattern>/modifyEmpPizzaOrder</url-pattern>
        <url-pattern>/modifyEmpDecorationOrder</url-pattern>
        <url-pattern>/updateEmpPizzaOrder</url-pattern>
        <url-pattern>/updateEmpDecorationOrder</url-pattern>
    </servlet-mapping>

    <servlet>
        <display-name>OrderController</display-name>
        <servlet-name>OrderController</servlet-name>
        <servlet-class>college.custom.controller.OrderController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>OrderController</servlet-name>
        <url-pattern>/orderPizza</url-pattern>
        <url-pattern>/orderDecoration</url-pattern>
        <url-pattern>/orderPizzaRequest</url-pattern>
        <url-pattern>/orderDecorationRequest</url-pattern>
        <url-pattern>/viewPizzaRequest</url-pattern>
        <url-pattern>/viewDecorationRequest</url-pattern>
        <url-pattern>/deletePizzaRequest</url-pattern>
        <url-pattern>/deleteDecorationRequest</url-pattern>

    </servlet-mapping>
	
</web-app>