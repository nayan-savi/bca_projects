<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  <display-name>cricket-club</display-name>
  
	<welcome-file-list>
		<welcome-file>jsp/login/login.jsp</welcome-file>
	</welcome-file-list>
	
	<servlet>
		<display-name>LoginController</display-name>
		<servlet-name>LoginController</servlet-name>
		<servlet-class>com.club.cricket.controller.LoginController</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>LoginController</servlet-name>
		<url-pattern>/login</url-pattern>
		<url-pattern>/logOff</url-pattern>
	</servlet-mapping>

	
	<servlet>
		<display-name>RegistrationController</display-name>
		<servlet-name>RegistrationController</servlet-name>
		<servlet-class>com.club.cricket.controller.RegistrationController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>RegistrationController</servlet-name>
		<url-pattern>/registration</url-pattern>
		<url-pattern>/log</url-pattern>
	</servlet-mapping>

	<servlet>
		<display-name>TicketController</display-name>
		<servlet-name>TicketController</servlet-name>
		<servlet-class>com.club.cricket.controller.TicketController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>TicketController</servlet-name>
		<url-pattern>/addTicket</url-pattern>
		<url-pattern>/viewTicket</url-pattern>
		<url-pattern>/modifyTicket</url-pattern>
		<url-pattern>/updateTicket</url-pattern>
		<url-pattern>/cancelTicket</url-pattern>
		<url-pattern>/paidTicket</url-pattern>
		<url-pattern>/lookup</url-pattern>
		<url-pattern>/viewBooked</url-pattern>
	</servlet-mapping>

	<servlet>
		<display-name>BookController</display-name>
		<servlet-name>BookController</servlet-name>
		<servlet-class>com.club.cricket.controller.BookController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>BookController</servlet-name>
		<url-pattern>/addBook</url-pattern>
		<url-pattern>/viewBook</url-pattern>
	</servlet-mapping>
	
	
	<servlet>
		<display-name>FeedbackController</display-name>
		<servlet-name>FeedbackController</servlet-name>
		<servlet-class>com.club.cricket.controller.FeedbackController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>FeedbackController</servlet-name>
		<url-pattern>/addFeedback</url-pattern>
		<url-pattern>/viewFeedback</url-pattern>
	</servlet-mapping>
	
</web-app>